{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./lib",
    
    /* Module Resolution */
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
